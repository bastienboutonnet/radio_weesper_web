{{- $.Scratch.Add "index" slice -}}
{{- range .Pages -}}
  {{ $title := or .Params.artist_name (or .Params.show_name .Title) }}
  {{- $.Scratch.Add "index" (dict
      "title" $title
      "permalink" .Permalink
      "summary" .Summary
      "content" .Plain
  ) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
