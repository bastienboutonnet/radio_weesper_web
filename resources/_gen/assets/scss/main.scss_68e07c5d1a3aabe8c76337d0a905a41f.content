.upcoming-track {
  display: grid;
  gap: var(--spacing-5);
  /* Allow natural vertical growth; horizontal scroll only when needed */
  padding-bottom: var(--spacing-5);
  overflow: auto visible;
  /* Exactly 4 visible columns; additional columns maintain same width */
  grid-auto-columns: calc((100% - (var(--spacing-5) * 3)) / 4);
  grid-auto-flow: column;
  grid-template-columns: none !important;
  overflow-anchor: none;
  -webkit-overflow-scrolling: touch;
  /* prevent auto realignment */
  scroll-behavior: smooth;
  scroll-snap-type: none;
  /* avoid scroll anchoring nudges */
}

